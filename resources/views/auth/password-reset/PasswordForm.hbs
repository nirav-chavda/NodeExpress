<div class="page-header">
    <h1>Simple Auth-System</h1>
</div>
{{#if message}}
    <h5>{{message}}</h5>
{{/if}}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                {{#if guest}}
                    <li><a href="/login">Log In</a></li>
                    <li><a href="/register">Sign Up</a></li>
                {{/if}}
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container row">
    <div class="jumbotron col-sm-4 pull-center">
        <form action="/auth/password/reset" method="post" onsubmit="return checkConfirm()">
            <div>
                <label>Password:</label>
                <input type="password" name="password" id="pswrd" />
            </div>
            <div>
                <label>Confirm Password:</label>
                <input type="password" id="cnfrm_pswrd" />
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Reset Password"/>
            </div>
        </form>                  
    </div>          
</div>
